<script src="//maps.google.com/maps/api/js?key=AIzaSyA2b6Qe48bvmxyYCCr1sA1QqrXCG8dJuYk"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<p id="notice"><%= notice %></p>
<div class="container body_padding" style="padding:10px; padding-bottom:50px;   /* Set relative to Height of the footer */ margin-top: 5%;">
<h1>Listing Drones</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Drone Number</th>
      <th>Drone Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drones.each do |drone| %>
      <tr>
        <td><%= drone.drone_number %></td>
        <td><%= drone.drone_name %></td>
        <td id="latitude"><%= drone.latitude %></td>
        <td id="longitude"><%= drone.longitude %></td>
        <td><%= link_to 'Show', drone %></td>
        <td><%= link_to 'Edit', edit_drone_path(drone) %></td>
        <td><%= link_to 'Destroy', drone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drone', new_drone_path %>
&nbsp; &nbsp;
<%= link_to 'Live Tracking', mappage_index_path %>
</div>
